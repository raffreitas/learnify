{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "None"
    }
  },
  "DatabaseSettings": {
    "ConnectionString": "Host=localhost;Port=5432;Database=courses;Username=postgres;Password=postgres;Pooling=True"
  },
  "RabbitMqMessageSettings": {
    "ConnectionString": "amqp://guest:guest@localhost:5672",
    "Messages": {
      "RequestCourseReviewIntegrationEvent": {
        "ExchangeName": "learnify.courses",
        "ExchangeType": "direct",
        "RoutingKey": "learnify.courses.request-course-review",
        "QueueName": "learnify.courses.request-course-review"
      },
      "CourseApprovedIntegrationEvent": {
        "ExchangeName": "learnify.courses",
        "ExchangeType": "direct",
        "RoutingKey": "learnify.courses.course-approved",
        "QueueName": "learnify.courses.course-approved"
      },
      "CoursePublishedIntegrationEvent": {
        "ExchangeName": "learnify.courses",
        "ExchangeType": "direct",
        "RoutingKey": "learnify.courses.course-published",
        "QueueName": "learnify.courses.course-published"
      }
    }
  }
}
  
